<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rolfwang="http://schemas.android.com/apk/res/com.rolfwang.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <com.rolfwang.mobilesafe.ui.SettingView
                android:id="@+id/sv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rolfwang:des_off="自动更新关闭"
                rolfwang:des_on="自动更新开启"
                rolfwang:title="自动更新" >
            </com.rolfwang.mobilesafe.ui.SettingView>

            <com.rolfwang.mobilesafe.ui.SettingView
                android:id="@+id/sv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rolfwang:des_off="隐藏号码归属地"
                rolfwang:des_on="显示号码归属地"
                rolfwang:title="号码归属地" >
            </com.rolfwang.mobilesafe.ui.SettingView>

            <com.rolfwang.mobilesafe.ui.SettingEnterView
                android:id="@+id/sev_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rolfwang:des="活力橙"
                rolfwang:title="归属地提示框风格" >
            </com.rolfwang.mobilesafe.ui.SettingEnterView>

            <com.rolfwang.mobilesafe.ui.SettingEnterView
                android:id="@+id/sev_postion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rolfwang:des="设置归属地提示框显示位置"
                rolfwang:title="归属地提示框位置" >
            </com.rolfwang.mobilesafe.ui.SettingEnterView>

            <com.rolfwang.mobilesafe.ui.SettingView
                android:id="@+id/sv_black_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rolfwang:des_off="黑名单拦截关闭"
                rolfwang:des_on="黑名单拦截开启"
                rolfwang:title="黑名单拦截" >
            </com.rolfwang.mobilesafe.ui.SettingView>

            <com.rolfwang.mobilesafe.ui.SettingEnterView
                android:id="@+id/sev_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rolfwang:des="是否创建桌面快捷图标"
                rolfwang:title="快捷图标" >
            </com.rolfwang.mobilesafe.ui.SettingEnterView>

            <com.rolfwang.mobilesafe.ui.SettingView
                android:id="@+id/sv_sorf_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rolfwang:des_off="软件锁关闭"
                rolfwang:des_on="软甲锁开启"
                rolfwang:title="软件锁" >
            </com.rolfwang.mobilesafe.ui.SettingView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>